@{
    ViewData["Title"] = "Welcome";
}

<div class="main-hero mb-4">
    <div class="row align-items-center gy-3">
        <div class="col-12 col-md-8">
            <h1 class="display-4 mb-2">Host events. Track RSVPs. Stay organized.</h1>
            <p class="lead mb-3">A simple event RSVP system built with ASP.NET Core, Identity, and Entity Framework Core.</p>
            <div class="d-flex flex-wrap gap-2">
                <a asp-controller="Events" asp-action="Index" class="btn btn-light btn-lg text-primary fw-semibold">
                    <i class="bi bi-calendar-event me-1"></i> Browse events
                </a>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Events" asp-action="Create" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-plus-lg me-1"></i> Create your first event
                    </a>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-person-plus-fill me-1"></i> Sign up to get started
                    </a>
                }
            </div>
        </div>
        <div class="col-12 col-md-4 text-md-end">
            <div class="d-inline-block text-start">
                <p class="mb-1"><i class="bi bi-check-circle-fill me-1"></i> Manage upcoming events</p>
                <p class="mb-1"><i class="bi bi-people-fill me-1"></i> Limit capacity with automatic checks</p>
                <p class="mb-0"><i class="bi bi-shield-lock-fill me-1"></i> Secure sign-in with ASP.NET Core Identity</p>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-12 col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h2 class="h5">Built with modern ASP.NET Core</h2>
                <p class="text-muted mb-0">Explore how MVC, Identity, and EF Core work together in a clean, layered architecture.</p>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h2 class="h5">Event-centric experience</h2>
                <p class="text-muted mb-0">View upcoming events, RSVP with a single click, and respect capacity limits automatically.</p>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h2 class="h5">Ready for extension</h2>
                <p class="text-muted mb-0">Add more pages, integrations, and tests as your scenario grows without changing the core design.</p>
            </div>
        </div>
    </div>
</div>
