@model EventRsvpSystem.Presentation.Controllers.CreateEventViewModel

@{
    ViewData["Title"] = "Create Event";
}

<h1 class="display-5 fw-semibold mb-3">Create a new event</h1>
<p class="text-muted mb-4">Define the basic details for your event. You can share it with attendees once it appears in the events list.</p>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form asp-action="Create" method="post" class="row g-3">
            <div class="col-12">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control form-control-lg" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="Date" class="form-label fw-semibold">Date &amp; time (UTC)</label>
                <input asp-for="Date" class="form-control" type="datetime-local" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="Capacity" class="form-label fw-semibold"></label>
                <input asp-for="Capacity" class="form-control" min="1" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-check-circle-fill me-1"></i> Create event
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
