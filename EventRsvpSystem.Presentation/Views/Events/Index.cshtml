@model IReadOnlyList<EventRsvpSystem.Presentation.Controllers.EventListItemViewModel>

@{
    ViewData["Title"] = "Upcoming Events";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
    <div>
        <h1 class="display-5 fw-semibold mb-1">Upcoming Events</h1>
        <p class="text-muted mb-0">Browse available events and RSVP to secure your spot.</p>
    </div>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Create event
        </a>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info shadow-sm">
        There are no upcoming events yet.
        @if (User.Identity?.IsAuthenticated == true)
        {
            <span>You can be the first to <a asp-action="Create">create one</a>.</span>
        }
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-xl-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column">
                        <div class="mb-3">
                            <h2 class="h5 card-title mb-1">@item.Name</h2>
                            <p class="text-muted mb-0">
                                <span class="me-2"><i class="bi bi-calendar-event"></i> @item.Date.ToString("dddd, MMM d yyyy")</span>
                            </p>
                        </div>

                        <div class="mb-3">
                            <span class="badge rounded-pill @(item.IsFull ? "bg-danger" : "bg-success")">
                                @if (item.IsFull)
                                {
                                    @:Full (@item.RsvpCount / @item.Capacity)
                                }
                                else
                                {
                                    @:@item.RsvpCount / @item.Capacity spots filled
                                }
                            </span>
                        </div>

                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-eye me-1"></i> View details
                            </a>

                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                using (Html.BeginForm("Rsvp", "Events", new { id = item.Id }, FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    if (item.IsFull)
                                    {
                                        <button type="submit" class="btn btn-secondary btn-sm" disabled>Event full</button>
                                    }
                                    else if (item.HasUserRsvped)
                                    {
                                        <button type="submit" class="btn btn-outline-success btn-sm" disabled>Already RSVPed</button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-primary btn-sm">RSVP</button>
                                    }
                                }
                            }
                            else
                            {
                                <span class="text-muted small">Log in to RSVP</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
